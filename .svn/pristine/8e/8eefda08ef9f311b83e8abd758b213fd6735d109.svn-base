@model IEnumerable<WCF.BusinessObjectsLayer.EntityObjects.OpenClassObject>

<div class="container">
    <div class="w-100 pull-left">
        <ul class="course-list" id="c-list">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="class-item">
                        <li class="w-100 pull-left ">
                            <div class="e-marker tkb-sprites hot-e"></div>
                            <div class="fullimg">
                                <a href="#">
                                    <img class="cover-img" src='http://imic.edu.vn/Content/Galleries/Class/@item.ClassAvatar'>
                                </a>

                                <div class="item__location">
                                    <span class="glyphicon glyphicon-map-marker"></span>
                                    @item.LocationID
                                </div>
                            </div>
                            <div class="bottom-box">
                                <a href="/lap-trinh-do-hoa/2062/khoa-hoc-lap-trinh-web-voi-asp-net-mvc-tren-du-an-website-web-portal.html" class="course-link w-100" style="font-weight: bold;">
                                    @item.ClassName
                                </a>
                                <button onclick="btnRegisterClass('4c5545c7-b2b8-4c35-b32a-0c12256ba4e0') " class="btnRegisterClass btn btn-signup pull-left" id="4c5545c7-b2b8-4c35-b32a-0c12256ba4e0" style="color: white; background: #EB1212;">Đăng ký</button>
                                <div class="pull-left time">
                                    <div class="fa fa-clock-o">@item.ClassTime</div>
                                </div>
                                <div class="event-date">
                                    <div class="month">@item.Month</div>

                                    <div class="detail text-center">
                                        <p class="w-100">@item.DayOfMonth</p>
                                        <p class="w-100 text-primary">@item.DayOfWeek</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </div>
                </div>
            }
        </ul>
    </div>
    <div class="clear"></div>
    <div class="col-lg-12">
        <img id="loader-img" alt="" src="~/Content/images/khai-giang/loca" style="position: relative; left: 400px; bottom: 233px; display: none;">
        <button class="btn btn-primary col-xs-12" onclick="loadMore()" style="display: none;">Tôi muốn xem thêm nhiều lớp khai giảng hơn nữa !!!</button>
    </div>
</div>
@section style{
    <style>
        .fullimg {
            position: relative;
        }

        .item__location {
            opacity: 1;
            background: rgba(0, 0, 0, 0.55);
            position: absolute;
            top: 10px;
            left: 10px;
            color: #fff;
            font-size: 12px;
            padding: 5px 8px;
            z-index: 7;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
        }
    </style>
}

@section script{

}