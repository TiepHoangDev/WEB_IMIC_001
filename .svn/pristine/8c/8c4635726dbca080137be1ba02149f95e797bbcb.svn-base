@model IEnumerable<WCF.BusinessObjectsLayer.EntityObjects.RecruitmentNewsletterObject>

<div class="career-chance w1220">
    <div class="recruitment-list">
        <table width="100%">
            <thead>
                <tr>
                    <th width="160"></th>
