@{
    Layout = null;
}
@model List<WCF.BusinessObjectsLayer.EntityObjects.TechCommentReplyObject>
<div class="sub-cmt-box">

    @foreach (var item in Model)
    {
        <div class="t-subcomment w-100 pull-left">
            <img src="~/Content/images/avatar/@item.objReplyBy.ImageAvatar" class="round-avatar pull-left" />
            <div class="t-cmt-right">
                <div class="w-100 pull-left">
                    <a class="pull-left"><b>@item.objReplyBy.FullName</b></a>
                    <div class="pull-right text-muted">1h</div>
                </div>
                <div class="t-cmt-content">
                    @item.ContentReply
                </div>
                <div class="w-100 pull-left m-t-8">
                    <div class="pull-right text-muted">
                        <div class="pull-right">0 likes</div>
                        <div class="fa fa-heart p-right-10"></div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
<div class="w-100 pull-left t-reply-box" style="display:none;">
    <textarea class="form-control" placeholder="Trả lời bình luận" rows="3" name="subcmt"></textarea>

</div>