@model IEnumerable<WCF.BusinessObjectsLayer.EntityObjects.ExperiencerObject>
    @{
        Layout = null;
    }
    <a class="special text-muted">
        Chuyên gia:

            @if (Model.Count() > 0)
            {
                string lisTecher = "";
                if (Model.Count() > 1)
                {
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        lisTecher += Model.ElementAt(i).FullName + "; ";
                    }
                }

                <strong class="text-primary spe-name" title="@lisTecher">
                    @Model.ElementAt(0).FullName
                </strong>
            }

            else
            {
                <strong class="text-primary spe-name" title="Chưa có giáo viên">
                    Chưa có giáo viên
                </strong>
            }
                
    </a>
