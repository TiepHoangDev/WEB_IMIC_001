
@{
    ViewBag.Title = "Cập nhật quy tắc viết bài";
    Layout = "~/Areas/BTV/Views/Shared/_LayoutAdmin.cshtml";
}

@model WCF.BusinessObjectsLayer.EntityObjects.RuleWritingObject
<div class="portlet box red-intense">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Cập nhật bài viết công nghệ
        </div>
        <div class="tools">

        </div>
    </div>

    <div class="portlet-body">
        <div style="width:100%">
            @using (Html.BeginForm("RuleUpdate", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "ck-form" }))
            {
               @Html.HiddenFor(x=>x.ID)
                <div class="form-group">
                    <label>Tiêu đề bài viết</label>

                    @Html.TextBoxFor(q => q.Title, new
       {
           @class = "form-control",
           @placeholder = "Tiêu đề"

       })
                </div>
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea class="form-control" name="content"> @Html.Raw(Model.Content) </textarea>
                </div>

                <button class="btn btn-primary btn-sm" type="submit">Submit</button>

            }
        </div>
    </div>
</div>
@section PageLevelScript{
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Areas/AdminCP/Content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Areas/AdminCP/Content/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        if ($(window).width() > 500) {
            var editor = CKEDITOR.instances['content'];

            if (editor) { editor.destroy(true); }
            CKEDITOR.replace('content', {
                enterMode: CKEDITOR.ENTER_BR,
                htmlEncodeOutput: true,
                //extraPlugins: 'uicolor',
                height: '700px'

            });
                    CKFinder.setupCKEditor(null, '@Url.Content("~/Areas/AdminCP/Content/ckfinder")');
        }
    </script>


   
}

