
@{
    ViewBag.Title = "TechRightUpdate";
    Layout = "~/Areas/AdminCP/Views/Shared/_Admin.cshtml";
}

@model WCF.BusinessObjectsLayer.EntityObjects.TechRightObject
<div class="portlet box red-intense">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Thêm mới bài viết
        </div>
        <div class="tools">

        </div>
    </div>

    <div class="portlet-body">
        <div style="width:100%">
            @using (Html.BeginForm("TechRightUpdate", "TechAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m=>m.TechRightId)
                   @Html.HiddenFor(m=>m.TechRightImage)
                <h4 style="color:red">@Html.ValidationSummary("", true)</h4>
                <div class="form-group">
                    <h3>Tiêu đề h3</h3>

                    @Html.TextBoxFor(q => q.TechRightTitle, new
                    {
                        @type = "text",
                        @class = "form-control",
                        @required = "true",
                        @placeholder = "tiêu đề chính"
                    })
                </div>

                <div class="form-group">
                    <label>Hình ảnh</label>

                    <input type="file" name="Avatar" id="ava">
                    <div style="margin-top:15px;">
                        <img style="width:200px;height:180px;" class="img-thumbnail rimage" src="~/Content/Galleries/Tech/TechRight/@Model.TechRightImage" />
                    </div>
                </div>


                <div class="form-group">
                    <h3>Đường dẫn</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl, new
                    {
                        @type = "text",
                        @class = "form-control",
                        @placeholder = "Đường dẫn"
                    })
                </div>
                <div class="form-group">
                    <h3>Tiêu đề 1</h3>

                    @Html.TextBoxFor(q => q.TechRightLine1, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "tiêu đề 1"
                    })
                </div>
                <div class="form-group">
                    <h3>Đường dẫn1</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl1, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "Nội dung"
                    })
                </div>
                <div class="form-group">
                    <h3>Tiêu đề 2</h3>

                    @Html.TextBoxFor(q => q.TechRightLine2, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "tiêu đề 1"
                    })
                </div>
                <div class="form-group">
                    <h3>Đường dẫn2</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl2, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "Nội dung"
                    })
                </div>
                <div class="form-group">
                    <h3>Tiêu đề 3</h3>

                    @Html.TextBoxFor(q => q.TechRightLine3, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "tiêu đề 1"
                    })
                </div>
                <div class="form-group">
                    <h3>Đường dẫn3</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl3, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "Đường dẫn"
                    })
                </div>
                <div class="form-group">
                    <h3>Tiêu đề 4</h3>

                    @Html.TextBoxFor(q => q.TechRightLine4, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "tiêu đề 4"
                    })
                </div>
                <div class="form-group">
                    <h3>Đường dẫn 4</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl4, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "Nội dung"
                    })
                </div>
                <div class="form-group">
                    <h3>Tiêu đề 5</h3>

                    @Html.TextBoxFor(q => q.TechRightLine5, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "tiêu đề 5"
                    })
                </div>
                <div class="form-group">
                    <h3>Đường dẫn5</h3>

                    @Html.TextBoxFor(q => q.TechRightUrl5, new
                    {
                        @type = "text",
                        @class = "form-control",

                        @placeholder = "Đường dẫn"
                    })
                </div>
                 <div class="form-group">
                            <label>Hiển thị</label>
                            @Html.CheckBoxFor(model => model.IsShowed, new { @class = "iCheck-helper" })
                            <em>(Chọn nếu muốn hiển thị bài viết)</em>
                    </div>
                <div class="form-group">
                    <h3>Vị trí</h3>

                    @Html.TextBoxFor(q => q.Rank, new
       {
           @type = "number",
           @class = "form-control",
           @placeholder = "vị trí để hiển thị"
       })
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>

                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
</div>

@section Scripts{
    <script src="~/Areas/AdminCP/Content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script>

        $("#ava").change(function () {
            readURL(this, '.rimage');
        });

    </script>
}

