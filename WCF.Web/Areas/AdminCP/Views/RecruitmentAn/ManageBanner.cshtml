
@{
    ViewBag.Title = "Quản lý banner";
    Layout = "~/Areas/AdminCP/Views/Shared/_Admin.cshtml";
}

@using WCF.Web.App_Start
@model  IEnumerable<WCF.BusinessObjectsLayer.EntityObjects.RecruitmentBannerObject>
<div class="portlet box red-intense">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Quản lý banner
        </div>
        <div class="tools">

        </div>
    </div>
    <div class="portlet-body">
        <div class="col-xs-12" style="float:none">
            <div style="padding-bottom:10px;">
                <a class="btn btn-primary btn-sm" style="margin-top:10px;" href="@Url.Action("BannerInsert","RecruitmentAn")">
                    Thêm mới
                    <span class="fa fa-plus" style="padding-left:6px;"></span>
                </a>
            </div>
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tbl-main" aria-describedby="dataTables-example_info">
                <thead>
                    <tr role="row">
                        <th>Tiêu đề h3</th>
                        <th>Tiêu đề h4</th>
                        <th>Hình ảnh</th>
                        <th>Nội dung top</th>
                        <th>Nội dung mid</th>
                        <th>Nội dung bottom</th>
                        <th>Rank</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.h3text</td>
                            <td>@item.h4text</td>
                            <td><img style="width:50px;height:50px;" src="~/Content/Galleries/Banner/@item.ImageLink" alt="@item.ImageAlt" /></td>
                            <td>@item.pTopText</td>
                            <td>@item.pMidText</td>
                            <td>@item.pBotText</td>
                            <td>@item.Rank</td>

                            <th>
                                <a href="@Url.Action("BannerUpdate", "RecruitmentAn", new { id = item.HomeBannerId })" class="btn btn-info">Sửa</a>
                                <a class="btn btn-danger" onclick="Remove('@item.HomeBannerId','@StringHelpers.FormatJSString(""+item.h3text)',this)">Xóa</a>
                            </th>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script>
        $(document)
            .ready(function () {
                $('#tbl-main').dataTable();
            });

        function Remove(id, name, event) {
            var sender = event.currentTarget;
            var answer = confirm("Bạn muốn xóa ảnh này không ?");
            if (answer) {
                $.ajax({
                    url: '@Url.Action("BannerDelete", "RecruitmentAn")',
                    data: { id: id },
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.rs == 'ok') {
                            $(event).closest("tr").remove();
                        }
                    }
                });
            }
        }
    </script>

}


