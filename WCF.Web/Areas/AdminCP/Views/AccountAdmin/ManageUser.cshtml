        function Remove(id, name, event) {
            var sender = event.currentTarget;
            var answer = confirm("Bạn muốn xóa người dùng này: " + name + " ?");
            if (answer) {
                $.ajax({
                    url: '@Url.Action("DeleteUser", "AccountAdmin")',
                    data: { id: id },
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.rs=='ok') {
                            $(event).closest("tr").remove();
                        }
                    }
                });
            }
        }

