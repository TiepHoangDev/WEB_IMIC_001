@using WCF.BusinessObjectsLayer.EntityObjects;
@using WCF.Web.App_Start
@{
    Layout = "~/Areas/AdminCP/Views/Shared/_Admin.cshtml";
}
@model IEnumerable<WCF.BusinessObjectsLayer.EntityObjects.VideoCommentObject>
<style>
    th {
        text-align: center !important;
    }

    td {
        text-align: center !important;
    }
</style>

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit"></i>Quản lí bình luận
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th>
                        Tài khoản
                    </th>
                    <th>
                        Họ tên
                    </th>
                    <th>
                        Nội dung
                    </th>
                    <th>
                        Ngày bình luận
                    </th>
                    <th>
                        Lượt like
                    </th>
                    <th>
                        Lượt trả lời
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-commentid="@item.VideoCommentId">
                        <td>
                            @item.Account.Username
                        </td>
                        <td>
                            @item.Account.FullName
                        </td>
                        <td>
                            @item.ContentComment
                        </td>
                        <td>
                            @item.ModifiedTime.ToString("dd/MM/yyyy HH:mm:ss")
                        </td>
                        <td>
                            @item.TotalOfLikes.ToString("n0")
                        </td>
                        <td>
                            @item.TotalOfReplies.ToString("n0")
                        </td>
                        <td>
                            <a class="edit" href="javascript:;">
                                Edit
                            </a>
                        </td>
                        <td>
                            <a class="delete" href="javascript:;">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Areas/AdminCP/Content/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Areas/AdminCP/Content/assets/admin/pages/scripts/table-editable-comments.js"></script>

    <script>
        jQuery(document).ready(function () {
            TableEditable.init();
        });
    </script>

}
