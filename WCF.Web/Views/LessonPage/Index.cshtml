    <script>
        var page = 1;
        $(document)
            .on('click',
                '.btn-load-detail',
                function (e) {
                    var id = $(this).data('id');
                    var code = $(this).data('ul');
                    var page1 = $(this).data('page');
                    var t = $(this);
                    $.ajax({
                        url: '@Url.Action("Lesson_MoreDetail", "LessonPage")',
                        data: { lessonid: id, page: page1 },
                        success: function (res) {

                            var $html = $.parseHTML(res);
                            var rs = $($html).find('.col1').length;
                            if (rs > 0) {
                                $($html).hide();
                                $('#ul-detail-' + code).append($html);
                                $($html).fadeIn('slow');
                                $(t).data('page', page1 + 1);

                            } else {
                                $('#myModal').modal('show');
                            }
                        }
                    });
                });
        $('.btn-load-les')
