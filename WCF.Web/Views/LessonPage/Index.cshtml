                function (e) {
                    $.ajax({
                        url: '@Url.Action("Lesson_GetMore", "LessonPage")',
                        data: { page: page },
                        success: function (res) {
                            page = page + 1;
                            var $html = $.parseHTML(res);
                            var rs = $($html).find('.portlet').length;
                            if (rs > 0) {
                                $($html).hide();
                                $('#lesson-box').append($html);
