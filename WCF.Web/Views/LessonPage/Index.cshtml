                            slicebox.next();
                            return false;

                        });

                        $navArrows.children(':last').on('click', function () {

                            slicebox.previous();
                            return false;

                        });
                        setInterval(function (e) { slicebox.next(); }, 3000);

                    };

                return { init: init };

            })();

            Page.init();

        });
