@using System.Configuration
@model WCF.BusinessObjectsLayer.EntityObjects.RegisterDetailObject
@{
    Layout = null;
}

<div id="modalRegisterClass" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center" style="color: #0097d0;"><strong>THÔNG TIN CÁ NHÂN</strong></h4>
            </div>
            <div class="modal-body">
                <!--Noi dung popup-->
                
                <!--End Noi dung popup-->
                @using (Html.BeginForm("DetailCourse_RegisterCourse", "TrainingPage", FormMethod.Post, new { @id = "frmRegisterClass", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(m => m.CourseId)
                    <div class="form-group">
                        <label class="control-label col-sm-3">Họ tên :</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.RegisterPerson.FullName, new { @class = "form-control", style = "border: 1px solid #ccc;border-radius: 4px;" })
                            <p style="color:red; font-weight:bold; display:none; font-size:12px ; margin-top: 5px;font-style: italic" class="name_warning">Họ tên không được phép trống.</p>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Địa chỉ :</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.RegisterPerson.Address, new { @class = "form-control", style = "border: 1px solid #ccc;border-radius: 4px;" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Email :</label>
                        <div class="col-sm-8" >
                            @Html.TextBoxFor(m => m.RegisterPerson.Email, new { @class = "form-control", style = "border: 1px solid #ccc;border-radius: 4px;" })
                            <p style="color: red; font-weight: bold; display: none; font-size: 12px;  margin-top: 5px;font-style: italic" class="Email_warning">Email không được phép trống.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Số điện thoại :</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.RegisterPerson.Phone, new { @class = "form-control", style = "border: 1px solid #ccc;border-radius: 4px;" })
                            <p style="color: red; font-weight: bold; display: none; font-size: 12px; margin-top: 5px;font-style: italic" class="Phone_warning ">Số điện thoại không được phép trống.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Bạn hiện là :</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="jobType">
                                @{
                    foreach (var itemJob in ViewBag.ListJob)
                    {
                        <option value="@itemJob.JobObjectId">@itemJob.JobObjectName</option>
                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Tin nhắn :</label>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(m => m.Message, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group" style="float: left; width: 100%">
                        <label class="control-label col-sm-3"></label>
                        <div class="col-sm-6" style="margin-left: 10px">
                            <div class="g-recaptcha" data-sitekey="@ConfigurationManager.AppSettings["ReCaptchaGoogleSiteKey"]"></div>

                            <label style="color: red" id="error"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-6">
                            <button id="btnSubmitReg" type="button" class="btn btn-info text-uppercase">Đăng ký tham gia</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>