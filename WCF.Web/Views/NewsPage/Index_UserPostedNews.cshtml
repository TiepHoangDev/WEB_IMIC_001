
@{
    Layout = null;
}
@using WCF.Web.App_Start;
@model List<WCF.BusinessObjectsLayer.EntityObjects.NewsObject>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-lg-4 col-md-4">
            <div class="item">
                <a href="@Url.Action("NewsDetail", "NewsPage", new { newsCodeNumber = item.NewsCodeNumber, postName = StringHelpers.ToAscii(item.NewsTitle) })">
                    <img style="width: 100%;height: 106px" src="@Url.Content("~/Content/Galleries/News/NewsImage/" + item.NewsAvatar)" class="img" />
                    @if (item.NewsTitle.Length > 75)
                    {
                        <h4>@item.NewsTitle.Substring(0, 75)...</h4>
                    }
                    else
                    {
                        <h4>@item.NewsTitle</h4>
                    }
                </a>
            </div>
        </div>
    }
</div>
