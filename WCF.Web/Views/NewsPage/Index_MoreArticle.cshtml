@{
    Layout = null;
}
@using WCF.Web.App_Start;
@model List<WCF.BusinessObjectsLayer.EntityObjects.NewsObject>
@foreach (var item in Model)
{
    <div class="col-xs-12 col-lg-3 col-md-4 col-sm-6">

        <div class="item">
            <div class="photo">
                <a href="@Url.Action("NewsDetail", "NewsPage", new { newsCodeNumber = item.NewsCodeNumber, postName = StringHelpers.ToAscii(item.NewsTitle) })"><img style="width:100%; height: 150px;" src="@Url.Content("~/Content/Galleries/News/NewsImage/" + item.NewsAvatar)" alt="@item.NewsTitle"/></a>
            </div>
            <div class="box-small">
                @if (item.NewsTitle.Length > 75)
                {
                    <h3><a href="@Url.Action("NewsDetail", "NewsPage", new { newsCodeNumber = item.NewsCodeNumber, postName = StringHelpers.ToAscii(item.NewsTitle) })">@item.NewsTitle.Substring(0, 75)...</a></h3>
                }
                else
                {
                    <h3><a href="@Url.Action("NewsDetail", "NewsPage", new { newsCodeNumber = item.NewsCodeNumber, postName = StringHelpers.ToAscii(item.NewsTitle) })">@item.NewsTitle</a></h3>
                }
                <div class="by"><span>Admin</span> | @item.ModifiedTime.ToShortDateString()</div>
                @if (item.NewsSummary != null)
                {
                    if (item.NewsSummary.Length > 230)
                    {
                        <h4>@item.NewsSummary.Substring(0, 230)...</h4>
                    }
                    else
                    {
                        <h4>@item.NewsSummary</h4>
                    }
                }

            </div>
            <div class="box-line">
                <span class="icon_like">@item.TotalOfLike</span>
                <span class="icon_comment">@item.TotalOfComment</span>
                <span class="icon_share">@item.TotalOfShare</span>
                <a href="#" class="icon_fb"></a>
            </div>
        </div>

    </div>
}
